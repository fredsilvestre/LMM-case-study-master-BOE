anova <- anova(M9,M8,M7,M6,M5,M4,M3,M2,M1)
anova
# the best is XXX 

kbl <- kbl(anova)
kbl
table2 <- anova %>% kbl(caption="AOV") %>% kable_classic("striped",full_width=F) %>%
        column_spec(1, bold=T)
table2
save_kable(table2, file="aovCDIS.pdf") 


# Run the best model with REML=TRUE
M7 <- lmer(CDISyj~Population+Replicate+Replicate:Population+ (1|ID), data=test1, REML=T)
summary(M7)
ranova(M7)

tab <- tab_model(M7, p.val="kr", show.df=T, show.reflvl=T, p.style="stars")
tab
save_kable(tab, file="ICCCDIS.pdf") 
# https://strengejacke.github.io/sjPlot/articles/tab_model_estimates.html 


plot_model(M7)

png(file="M7.png") #to save the plot
plot_model(M7)
dev.off()



#
